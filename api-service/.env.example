# ============================================
# Node.js Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5000
HOST=localhost
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb://localhost:27017/spaceguide-ai-backend
# For Docker: mongodb://mongodb:27017/spaceguide-ai-backend
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/spaceguide-ai-backend

# ============================================
# Security - JWT Secrets (CHANGE THESE!)
# ============================================
ACCESS_TOKEN_SECRET=dfsdfhjshfshfjsdhjf84842dsfsdkfk
REFRESH_TOKEN_SECRET=fsdfhsdhfjdshfjdhhfj878788998fd9

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# AI Provider Configuration
# ============================================
# Embedding Provider: 'openai', 'ollama', or 'fastapi'
EMBEDDING_PROVIDER=fastapi

# Chat Provider: 'openai' or 'ollama'
CHAT_PROVIDER=ollama

# Text Writer Provider: 'openai' or 'ollama'
TEXT_WRITER_PROVIDER=ollama

# Image Generation Provider
# Options: pollinations (free, no API key), huggingface (free tier), openai (production)
# Development default: pollinations
# Production default: openai
IMAGE_PROVIDER=pollinations
USE_POLLINATIONS=true

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TEXT_WRITER_MODEL=tinyllama

# ============================================
# FastAPI Embedding Service
# ============================================
EMBEDDING_API_URL=http://localhost:8001

# ============================================
# OpenAI (Optional - for production)
# ============================================
# Required if using OpenAI for image/text generation
# OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# HuggingFace (Optional - for free image generation)
# ============================================
# Required if using HuggingFace for image generation
# HUGGINGFACE_API_KEY=your-huggingface-api-key
# HF_API_KEY=your-huggingface-api-key

# ============================================
# Stripe Payment Integration (Optional)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ChromaDB (Optional - if using external instance)
# ============================================
# CHROMADB_URL=http://localhost:8000
